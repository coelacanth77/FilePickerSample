        <Image x:Name="FileImage" HorizontalAlignment="Left" Height="437" Margin="82,287,0,0" VerticalAlignment="Top" Width="519"/>
        <Button x:Name="pickButton" Content="画像を選択する" HorizontalAlignment="Left" Margin="133,69,0,0" VerticalAlignment="Top" Click="pickButton_Click"/>

    </Grid>
</Page>
