    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF1259FB">
        <TextBlock x:Name="FileNameText" HorizontalAlignment="Left" Margin="133,172,0,0" TextWrapping="Wrap" Text="ファイル名" VerticalAlignment="Top" Height="48" Width="978" FontFamily="Meiryo UI" FontSize="17.333"/>
